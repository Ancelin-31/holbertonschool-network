#!/usr/bin/env bash
# Configures a server so localhost and facebook.com resolve correctly

HOSTS_FILE="/etc/hosts"

# Remove existing entries to avoid duplicates
sudo sed -i '/[[:space:]]localhost$/d' "$HOSTS_FILE"
sudo sed -i '/[[:space:]]facebook.com$/d' "$HOSTS_FILE"

# Add the required mappings
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
